@{
    ViewData["Title"] = "Thanh toán";
    double totalAmount = 0;
    double moneyToCheckout = 0;
    int index = 0;
    var discounts = ViewData["Discounts"] as List<DiscountViewModel>;
    var ownDiscounts = ViewData["OwnDiscounts"] as List<DiscountViewModel>;
    int shipMoney = 0;
}

@using PetStoreProject.Areas.Admin.ViewModels
@using PetStoreProject.ViewModels;
@model List<ItemsCheckoutViewModel>


@section HeadOptional {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="~/css/checkout_style.css" rel="stylesheet" />
    <style>
        .block-available {
            display: -webkit-box;
            display: -moz-box;
            display: -ms-flexbox;
            display: -webkit-flex;
            display: flex;
            align-items: center;
            justify-content: center;
            width: max-content;
            height: 24px;
            padding: 2px 8px;
            gap: 10px;
            border-radius: 4px;
            background: #F0FDF4;
            color: var(--22-c-55-e);
            font-size: 12px;
            font-weight: 500;
        }

        .out-of-stock {
            opacity: 0.3; /* Làm nhạt màu */
            cursor: not-allowed; /* Con trỏ hiển thị không được phép */
            pointer-events: none; /* Ngăn chặn sự kiện click */
        }

        .discount-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 16px;
            font-family: Arial, sans-serif;
            margin: 16px;
            display: flex;
            gap: 20px;
            align-items: center;
        }

            .discount-card .header {
                display: flex;
                align-items: center;
                margin-bottom: 8px;
            }

                .discount-card .header img {
                    height: 40px;
                    margin-right: 8px;
                }

                .discount-card .header .title {
                    font-size: 16px;
                    font-weight: bold;
                }

            .discount-card .content {
                margin-bottom: 8px;
            }

                .discount-card .content .description {
                    font-size: 14px;
                    margin-bottom: 4px;
                }

            .discount-card .footer {
                font-size: 12px;
                color: #999;
            }

                .discount-card .footer .condition {
                    color: #00f;
                    text-decoration: underline;
                }

        .warning {
            font-size: 12px;
            color: #f00;
            margin-top: 8px;
        }

        .text-tiny {
            color: rgba(0,0,0,.54);
            font-size: 12px;
        }

        .progress-level-bar.t1 {
            background: #FFE9E0;
        }

        .progress-level-bar {
            position: relative;
            display: block;
            width: 70px;
            height: 4px;
            border-radius: 14px;
            background: #EBFFF1;
        }

        .w-full {
            width: 100% !important;
        }

        .progress-level-bar.t1 span {
            background: #FF5200;
        }

        .progress-level-bar span {
            position: relative;
            display: block;
            width: 0%;
            height: 100%;
            overflow: hidden;
            border-radius: 14px;
            background: #22C55E;
            transition-property: width;
            transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
            transition-duration: 150ms;
            transition-duration: 2s;
            transition-timing-function: cubic-bezier(0, 0, 0.2, 1);
        }

        #title {
            color: red;
        }

        .paymentMehtod_style {
            display: flex;
            align-items: center;
        }

    </style>
}

<div class="cart-main-area adp_bottom">
    <div class="container">
        <div class="row my-4">
            <div class="col">
                <a href="/cart/detail" class="btn btn-link text-muted">
                    <i class="bi bi-arrow-left-short"></i>Trở lại giỏ hàng
                </a>
            </div> <!-- end col -->
            <div class="col">
                @*                       <div class="text-end mt-2 mt-sm-0">
                <a href="#" class="btn btn-success">
                <i class="mdi mdi-cart-outline me-1"></i> Xử lý
                </a>
                </div> *@
            </div> <!-- end col -->
        </div> <!-- end row-->
        @* <form asp-action="ProcessCheckout" asp-controller="Checkout" method="post"> *@
        <div class="row">
            <div class="col-xl-8">
                <div class="card">
                    <div class="card-body">
                        <div class="p-3 bg-light mb-3">
                            <h5 class="font-size-16 mb-0">Danh sách sản phẩm </h5>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-centered mb-0 table-nowrap">
                                @if (Model != null && Model.Count > 0)
                                {
                                    <thead>
                                        <tr>
                                            <th class="border-top-0" style="width: 110px;" scope="col">Sản phẩm</th>
                                            <th class="border-top-0" scope="col">Mô tả sản phẩm</th>
                                            <th class="border-top-0" scope="col">Giá</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var itemCart in Model)
                                        {
                                            var price = itemCart.Price;

                                            if (itemCart.Promotion != null)
                                            {
                                                price = price * (1 - (float)itemCart.Promotion.Value / 100);
                                            }
                                            var amount = price * itemCart.Quantity;

                                            if (index > 2)
                                            {
                                                <tr id="display_product_@index" style="display: none">
                                                    <th scope="row"><img src="@itemCart.ImgUrl.Trim()" alt="product-img" title="product-img" class="avatar-lg rounded"></th>
                                                    <td>
                                                        <h5 class="font-size-16 text-truncate"><a href="#" class="text-dark">@itemCart.Name</a></h5>
                                                        <h6 class="font-size-16 text-truncate">@itemCart.Option</h6>
                                                        <p class="text-muted mb-0">
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star-half text-warning"></i>
                                                        </p>
                                                        <p class="text-muted mb-0 mt-1">@price.ToString("#,###") VND x @itemCart.Quantity</p>
                                                        @if (itemCart.Promotion != null)
                                                        {
                                                            <del class="text-muted mb-0 mt-1">@itemCart.Price.ToString("#,###") VND x @itemCart.Quantity</del>
                                                        }
                                                        <input type="hidden" value="@itemCart.ProductOptionId" id="product_productOptionId_@index" />
                                                        <input type="hidden" value="@itemCart.Price" id="product_price_@index" />
                                                        <input type="hidden" value="@itemCart.Quantity" id="product_quantity_@index" />
                                                    </td>

                                                    <td><p class="float_r margin_auto">@amount.ToString("#,###") VND</p></td>
                                                </tr>
                                            }
                                            else
                                            {
                                                <tr>
                                                    <th scope="row"><img src="@itemCart.ImgUrl.Trim()" alt="product-img" title="product-img" class="avatar-lg rounded"></th>
                                                    <td>
                                                        <h5 class="font-size-16 text-truncate"><a href="#" class="text-dark">@itemCart.Name</a></h5>
                                                        <h6 class="font-size-16 text-truncate">@itemCart.Option</h6>
                                                        <p class="text-muted mb-0">
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star-half text-warning"></i>
                                                        </p>
                                                        <p class="text-muted mb-0 mt-1">@price.ToString("#,###") VND x @itemCart.Quantity</p>
                                                        @if (itemCart.Promotion != null && itemCart.Promotion.Value != null)
                                                        {
                                                            <del class="text-muted mb-0 mt-1">@itemCart.Price.ToString("#,###") VND x @itemCart.Quantity</del>
                                                        }
                                                        <input type="hidden" value="@itemCart.ProductOptionId" id="product_productOptionId_@index" />
                                                        <input type="hidden" value="@itemCart.Price" id="product_price_@index" />
                                                        <input type="hidden" value="@itemCart.Quantity" id="product_quantity_@index" />
                                                    </td>
                                                    <td style="text-align: center"><p class="float_r margin_auto">@amount.ToString("#,###") VND</p></td>
                                                </tr>
                                            }
                                            if (itemCart.Promotion != null)
                                            {
                                                <input type="hidden" value="@itemCart.Promotion.PromotionId" id="product_promotionId_@index" />
                                            }
                                            totalAmount += amount;
                                            index++;
                                        }
                                        <input type="hidden" value="@index" id="product_index" />
                                        <input type="hidden" value="1" id="products_null" />

                                    </tbody>
                                }
