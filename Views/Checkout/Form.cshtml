<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h5 class="modal-title" id="staticBackdropLabel">Mã giảm giá</h5>
                @if (discounts == null || discounts.Count == 0)
                {
                    <span>Không có mã giảm giá nào</span>
                }
                else
                {
                    @foreach (var item in discounts)
                    {
                        <div class="discount-card @(item.Status == false ? "out-of-stock" : "")">
                            <div style="width: 89%">
                                @if (item.DiscountType.Id == 3)
                                {
                                    <div class="header">
                                        <img src="~/img/coupon.png" />
                                        <span class="title">Giảm @((int)item.Value)% Giảm tối đa @item.MaxValue?.ToString("#,###") VND</span>
                                    </div>
                                    <div class="content">
                                        <div class="description">Đơn Tối Thiểu @(((decimal)item.MinPurchase).ToString("#,###.###")) VND</div>
                                    </div>
                                    <div class="flex items-center justify-between gap10">
                                        <div class="progress-level-bar w-full">
                                            <span data-progress="@item.Used" data-max="@item.Used" class="">
                                            </span>
                                        </div>
                                    </div>
                                    <div class="text-tiny">Đã dùng @((int)item.Used) lượt , HSD: Không thời hạn</div>
                                    <div class="footer">
                                        <div class="warning">@item.StatusString</div>
                                    </div>
                                }
                                else
                                {
                                    <div class="header">
                                        <img src="~/img/coupon.png" />
                                        <span class="title">@(item.DiscountType.Id != 2 ? "Giảm " + (int)item.Value + "% Giảm tối đa " + item.MaxValue?.ToString("#,###") + " VND" : "Giảm " + item.Value?.ToString("#,###") + " VND")</span>
                                    </div>
                                    <div class="content">
                                        <div class="description">Đơn Tối Thiểu @(((decimal)item.MinPurchase).ToString("#,###.###")) VND</div>
                                    </div>
                                    <div class="flex items-center justify-between gap10">
                                        <div class="progress-level-bar w-full">
                                            <span data-progress="@item.Used" data-max="@item.Quantity" class="">
                                            </span>
                                        </div>
                                    </div>
