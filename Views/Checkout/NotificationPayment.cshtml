@{
	ViewData["Title"] = "Kết quả thanh toán";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<div class="container-fluid contact py-5">
	<div class="container">
		<div class="p-5 bg-light rounded">
			<div class="row g-4">
				<div class="col-12">
					<div class="text-center mx-auto" style="max-width: 700px;">
						<h1 class="text-primary">@TempData["Status"]</h1>
						<h3 class="text-danger">@TempData["Message"]</h3>
					</div>
				</div>

			</div>
			<div class="row g-4">
				<div class="col-12 text-center">
					<a href="/home" class="btn btn-link text-muted">
						<i class="bi bi-arrow-left-short"></i>Trở lại trang chủ
					</a>
				</div>
			</div>
		</div>
	</div>
</div>