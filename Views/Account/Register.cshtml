@model PetStoreProject.ViewModels.RegisterViewModel;
@{
    ViewData["Title"] = "Đăng Ký";
}

@section HeadOptional {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}

<!-- Regester Page Start Here -->
<div class="register-area adp_top adp_bottom">
    <div class="container">

        <div class="row">
            <div class="col-xl-6 col-lg-8 offset-xl-3 offset-lg-2">
                <div class="register-form login-form clearfix">
                    <h3 class="login-header">Đăng Ký Tài Khoản</h3>
                    @if (ViewBag.EmailMess != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show rounded-0">
                            <span>@ViewBag.EmailMess</span>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    else if (ViewBag.PhoneMess != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show rounded-0">
                            <span>@ViewBag.PhoneMess</span>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div class="form-group row mt-3">
                            <label asp-for="FullName" class="col-lg-3 col-md-3 col-form-label">Họ và Tên<em>*</em></label>
                            <div class="col-lg-9 col-md-9">
                                <input asp-for="FullName" class="form-control">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-3">
                            <label asp-for="Email" class="col-lg-3 col-md-3 col-form-label">Email<em>*</em></label>
                            <div class="col-lg-9 col-md-9">
                                <input asp-for="Email" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-3">
                            <label asp-for="Phone" class="col-lg-3 col-md-3 col-form-label">Số Điện Thoại<em>*</em></label>
                            <div class="col-lg-9 col-md-9">
                                <input asp-for="Phone" class="form-control">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row mt-3">
                            <label asp-for="Password" class="col-lg-3 col-md-3 col-form-label">Mật Khẩu<em>*</em></label>
                            <div class="col-lg-9 col-md-9">
                                <input asp-for="Password" class="form-control" id="password">
                                <div class="btn show-btn" onclick="showPassword()">
                                    <i class="fa-regular fa-eye-slash" id="eye-icon"></i>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row register-box justify-content-center text-center mt-5">
                            <button type="submit" class="login-btn col-sm-10 rounded-1">Tạo Tài Khoản</button>
                        </div>
                        <div class="row login-footer justify-content-center text-center mt-3">
                            <a asp-controller="Account" asp-action="LoginGoogle" class="col-sm-10 register-btn google-btn rounded-1">
                                <i class="fab fa-google me-2"></i>Tiếp Tục Với Google
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register Page End Here -->
@section ScriptOptional {
    <script>
        function showPassword() {
            var pass = document.getElementById("password");
            var icon = document.getElementById("eye-icon");
            if (pass.type === "password") {
                pass.type = "text";
                icon.classList.replace("fa-eye-slash", "fa-eye");
            } else {
                pass.type = "password";
                icon.classList.replace("fa-eye", "fa-eye-slash");
            }
        }
    </script>
}