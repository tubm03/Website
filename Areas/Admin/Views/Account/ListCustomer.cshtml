@{
    ViewData["Title"] = "ListCustomer";
}
@using PetStoreProject.ViewModels;

@model List<AccountDetailViewModel>

<link href="~/areas/css/list-user-style.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<style>
    #title-table li {
        width: auto !important;
    }

    .user_style, .email {
        width: 280px !important;
    }

    .phone_customer_style {
        width: 270px !important;
    }

    .title_hover:hover {
        text-decoration: underline;
        cursor: pointer;
    }



</style>

<div class="main-content-inner">
    <!-- main-content-wrap -->
    <div class="main-content-wrap">
        <div class="flex items-center flex-wrap justify-between gap20 mb-27">
            <h3>Tất cả khách hàng</h3>
        </div>
        <!-- all-user -->
        <div class="wg-box">
            <div class="flex items-center justify-between gap10 flex-wrap">
                <div class="wg-filter flex-grow">
                    <form class="form-search" onsubmit="return false;">
                        <fieldset>
                            <input id="search-input" type="text" placeholder="Tìm kiếm theo tên người khách hàng" class="" name="name" tabindex="2" value="" aria-required="true" required="">
                        </fieldset>
                        <div class="button-submit">
                            <button onclick="search()"><i class="icon-search"></i></button>
                        </div>
                    </form>
                </div>

            </div>
            <div class="wg-table table-all-user" id="table-content">
                <ul class="header-menu-list table-title flex gap20 mb-14 header_menu_style" style="min-width:1360px!important;" id="title-table">
                    <li class="user ">
                        <div id="" onclick="sortByName()" class="no-select body-title user_style title_hover">Khách hàng <i class="bi bi-chevron-expand"></i></div>
                    </li>
                    <li class="phone">
                        <div class="body-title" style="width:130px">Số điện thoại</div>
                    </li>
                    <li class="">
                        <div class="body-title email" style="width: 262px;">Email</div>
                    </li>
                    <li>
                        <div class="body-title title_hover no-select" onclick="sortByTotalOrder()">Tổng đơn hàng <i class="bi bi-chevron-expand"></i></div>
                    </li>
                    <li>
                        <div class="body-title text-center title_hover no-select" style="width:150px" onclick="sortByTotalOrderService()">Tổng đơn dịch vụ <i class="bi bi-chevron-expand"></i></div>
                    </li>
                    <li class="status" style="width:106px !important;">
                        <div class="body-title">
                            <a class="drop-icon " href="#">Trạng thái</a>
                            <ul class="common_ddown dropdown_style" id="status_list_customer" style="width: 190px">
                                <li><a href="#" onclick="changeStatus(-1)">- Tất cả</a></li>
                                <li><a href="#" onclick="changeStatus(0)">- Kích hoạt</a></li>
                                <li><a href="#" onclick="changeStatus(1)">- Không Kích hoạt</a></li>
                            </ul>
                        </div>
                    </li>
                    <li>
                        <div class="body-title text-center" style="width:115px!important;">Thao tác</div>
                    </li>
                </ul>
                <ul id="list-users" class="flex flex-column" style="min-width:1363px !important">
                    <!-- data user -->
                </ul>
            </div>
            <div class="divider"></div>
            <div class="flex items-center justify-between flex-wrap gap40" style="font-size:16px;">
                <div id="total-user"></div>
                <div class="text-tiny" id="no_data"></div>
                <div id="pagination"></div>
            </div>
        </div>
        <!-- /all-user -->
    </div>
    <!-- /main-content-wrap -->
</div>

<script src="~/js/list-product.js"></script>
<script src="~/areas/js/list-user.js"></script>